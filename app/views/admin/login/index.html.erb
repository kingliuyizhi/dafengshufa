<div class="container">
    <% if !flash[:notice].nil? %>
      <h3 class="alert alert-error text-center">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= flash[:notice] %>
      </h3>
    <% end %>
    <%= form_tag({:controller => "login", :action => "login"}, {:class => 'form-signin'}) do %>
        <h2 class="form-signin-heading text-info">大丰书法</h2>
        <input type="text" class="input-block-level" placeholder="用户名" name="username" id="username" />
        <input type="password" class="input-block-level" placeholder="密码" name="password" id="password" />
        <button class="btn btn-large btn-primary" type="submit" id="login">登陆</button>
    <% end %>
