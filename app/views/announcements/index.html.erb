<div class="container" style="margin-top:20px;">
  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span10">
      <ul class="breadcrumb">
        <li><a href="/<%= "?locale=" + params[:locale] if !params[:locale].nil? %>"><%= t("views.navigation.homepage") %></a> <span class="divider">&gt;</span></li>
        <li class="active"><%= t("views.navigation.announcements") %></li>

        <div class="pull-right">
          <a href="?locale=cn" class="language"><img src="/res/images/flags/cn.png" /></a>
          <a href="?locale=en" class="language"><img src="/res/images/flags/us.png" /></a>
        </div>
      </ul>
    </div>
    <div class="span1"></div>
  </div>

  <div class="row-fluid" style="min-height:840px;">
    <div class="span2"></div>
    <div class="span8">
      <div class="row-fluid">
        <table class='table'>
          <tbody id="announcements">
              <script type="text/template" id="announcements_template">
                {{ for (var i = 0; i < announcements.length; i++) { }}
                    {{ var announcement = announcements[i]; }}
                    {{ var d = new Date(announcements[i].created_at); }}
                    {{ d = d.getFullYear() + "-" + d.getMonth() + "-" + d.getDate(); }}
                    <tr><td class="span8" style="padding:13px;font-size:18px;"><a href="/announcements/{{= announcements[i]._id }}<%= "?locale=" + params[:locale] if !params[:locale].nil? %>" target="_blank">{{= announcements[i].title }}</a></td><td class="span4" style="padding:13px;"><span class="pull-right">{{= d }}</span></td></tr>
                {{ } }}
              </script>
          </tbody>
        </table>
      </div>
    </div>
    <div class="span2"></div>
  </div>